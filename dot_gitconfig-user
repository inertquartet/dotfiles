	pager = true
	status = auto
	ui = true
[color "status"]
       added = green
       changed = yellow
       untracked = red
[push]
	default = current
[core]
	autocrlf = input
	pager = less -FRSX
[alias]
	ci = commit
	co = checkout
	st = status -sb
	lg = log --graph --pretty=format:'%C(yellow)%h%C(auto)%d%Creset %s %C(white)- %an, %ar%Creset'
	details = log -n1 -p --format=fuller
	this = !get init && git add . && git commit -m \"Initial commit.\"

